{
    "name": "@databuddy/db",
    "version": "1.0.0",
    "main": "./src/index.ts",
    "types": "./src/index.ts",
    "exports": {
        ".": "./src/index.ts",
        "./client": "./src/client.ts",
        "./edge/*": "./src/edge/*",
        "./edge": "./src/edge/client.ts",
        "./src/edge/client": "./src/edge/client.ts"
    },
    "dependencies": {
        "@clickhouse/client": "^1.11.0",
        "dotenv": "^16.5.0",
        "drizzle-orm": "^0.42.0",
        "pg": "^8.15.6"
    },
    "devDependencies": {
        "@types/pg": "^8.11.13",
        "drizzle-kit": "^0.31.0",
        "tsx": "^4.19.3"
    },
    "scripts": {
        "db:generate": "drizzle-kit generate:pg",
        "db:push": "drizzle-kit push:pg",
        "db:studio": "drizzle-kit studio",
        "db:migrate": "drizzle-kit generate:pg && tsx src/migrate.ts",
        "db:deploy": "tsx src/migrate.ts"
    }
}