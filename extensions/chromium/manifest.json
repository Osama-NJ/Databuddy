{
  "manifest_version": 3,
  "name": "Databuddy Opt-Out",
  "version": "1.0.0",
  "description": "Opt out of Databuddy analytics tracking by setting a localStorage flag",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Databuddy Opt-Out"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
