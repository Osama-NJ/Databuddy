{
  "name": "databuddy",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "turbo run",
    "check-types": "turbo run check-types",
    "db:studio": "turbo run db:studio --filter=@databuddy/db",
    "generate-db": "turbo run generate --filter=@databuddy/db"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "turbo": "^2.5.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@elysiajs/cors": "^1.3.3"
  }
}