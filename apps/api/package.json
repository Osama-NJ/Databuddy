{
  "name": "api",
  "version": "1.0.50",
  "scripts": {
    "dev": "bun --watch run src/index.ts",
    "clean": "rm -rf dist",
    "build": "bun clean && bun build ./src/index.ts --outdir=dist --target=node",
    "start": "bun run dist/index.js",
    "pm2": "pm2 start src/index.ts --interpreter bun --name databuddy-api",
    "pm2:stop": "pm2 stop databuddy-api",
    "pm2:restart": "pm2 restart databuddy-api",
    "deploy": "wrangler deploy --minify",
    "dry-run": "wrangler deploy --minify --dry-run",
    "migrate:events": "bun run src/commands/run-events-migration.ts",
    "init:tables": "bun run src/commands/init-tables.ts"
  },
  "dependencies": {
    "@clickhouse/client": "^1.10.1",
    "@databuddy/auth": "../../packages/auth",
    "@databuddy/db": "../../packages/db",
    "@databuddy/logger": "../../packages/logger",
    "@databuddy/queue": "../../packages/queue",
    "@databuddy/redis": "../../packages/redis",
    "@databuddy/trpc": "../../packages/trpc",
    "@highlight-run/hono": "^1.0.3",
    "@hono/node-server": "^1.8.2",
    "@hono/trpc-server": "^0.3.4",
    "@hono/zod-validator": "^0.4.3",
    "@logtail/edge": "^0.5.2",
    "@prisma/client": "^6.4.1",
    "@trpc/server": "^11.0.0-next-beta.294",
    "@types/ua-parser-js": "^0.7.39",
    "better-auth": "^1.2.2",
    "hono": "^4.7.2",
    "prisma": "^6.4.1",
    "react": "19.0.0",
    "ua-parser-js": "^2.0.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "bun-types": "latest",
    "wrangler": "4"
  },
  "module": "src/index.js"
}