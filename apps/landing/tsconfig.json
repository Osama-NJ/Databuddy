{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "../dashboard/app/dashboard/components/add-website-dialog.tsx", "../dashboard/app/dashboard/components/add-website-form.tsx", "../dashboard/app/dashboard/components/websites-list.tsx", "../dashboard/components/blog-image-upload.tsx", "../dashboard/components/image-upload.tsx"],
  "exclude": ["node_modules"]
}
